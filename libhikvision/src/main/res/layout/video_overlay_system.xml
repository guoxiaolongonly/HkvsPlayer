<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="570px"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="#b2000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="36px"
    android:paddingTop="30px">

    <TextView
        android:id="@+id/system_ui_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="36px" />

    <ImageView
        android:id="@+id/system_ui_image"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_marginTop="36px" />

    <ProgressBar
        android:id="@+id/system_ui_seek_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:layout_marginTop="42px"
        android:maxHeight="6px"
        android:minHeight="6px"
        android:progressDrawable="@drawable/player_system_ui_progressbar"
        android:thumbOffset="0dip">

    </ProgressBar>

</LinearLayout>
